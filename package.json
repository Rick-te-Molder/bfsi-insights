{
  "name": "bfsi-insights",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/admin",
    "apps/web",
    "services/*"
  ],
  "scripts": {
    "dev": "astro dev",
    "dev:admin": "npm run dev -w apps/admin",
    "build": "astro build",
    "build:admin": "npm run build -w apps/admin",
    "build:web": "astro build",
    "preview": "astro preview",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "preflight": "npm run lint && npm run typecheck && npm run test:coverage",
    "typecheck:root": "tsc --noEmit",
    "typecheck": "npm run typecheck:root && npm run -ws --if-present typecheck",
    "lint": "npm run lint --workspaces --if-present && eslint \"apps/web/**/*.{js,ts,astro}\" \"scripts/**/*.{js,mjs,cjs}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "e2e": "playwright test",
    "check:links": "node scripts/dev/check-links.mjs",
    "dump:schema": "node scripts/dev/dump-schema.mjs",
    "check:large-files": "node scripts/ci/check-large-files.cjs",
    "publish:approved": "node scripts/ops/publish-approved.mjs",
    "lhci": "npx @lhci/cli@0.14.0 autorun --config=.lighthouserc.json",
    "prepare": "node -e \"try { require('husky').default() } catch (e) { if (e.code !== 'MODULE_NOT_FOUND') console.log(e) }\""
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.12",
    "@astrojs/node": "^9.5.0",
    "@astrojs/rss": "^4.0.7",
    "@astrojs/tailwind": "^6.0.2",
    "@supabase/supabase-js": "^2.87.0",
    "@tailwindcss/typography": "^0.5.19",
    "astro": "^5.16.6",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.3",
    "fuse.js": "^7.1.0",
    "lightningcss": "^1.30.2",
    "marked": "^17.0.0",
    "openai": "^6.15.0",
    "tailwindcss": "3.4.18",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@mozilla/readability": "^0.6.0",
    "@playwright/test": "^1.56.1",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/coverage-v8": "^4.0.16",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "astro-eslint-parser": "^1.0.2",
    "eslint": "^9.39.2",
    "eslint-plugin-astro": "^1.0.2",
    "globals": "^14.0.0",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.56.1",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "vitest": "^4.0.16",
    "yaml": "^2.8.2"
  },
  "engines": {
    "node": ">=20 <25"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs,astro,json,css,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx,mjs,cjs,astro}": [
      "eslint --fix --no-warn-ignored --max-warnings=0"
    ]
  }
}
