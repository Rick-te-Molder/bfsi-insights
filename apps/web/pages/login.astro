---
export const prerender = true;
import Base from '../layouts/Base.astro';
---

<Base title="Admin Login ¬∑ BFSI Insights">
  <div class="mx-auto max-w-md px-4 py-16">
    <div class="rounded-xl border border-neutral-800 bg-neutral-900/60 p-8">
      <header class="mb-6">
        <h1 class="text-3xl font-bold">üîê Admin Login</h1>
        <p class="mt-2 text-sm text-neutral-400">Sign in to access the review queue</p>
      </header>

      <form id="login-form" class="space-y-4">
        <div>
          <label for="email" class="block text-sm font-medium text-neutral-300 mb-1"> Email </label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="admin@example.com"
            required
            autocomplete="email"
            class="w-full rounded-lg border border-neutral-700 bg-neutral-800 px-4 py-2 text-white placeholder-neutral-500 focus:border-sky-500 focus:outline-none focus:ring-2 focus:ring-sky-500/20"
          />
        </div>

        <div>
          <label for="password" class="block text-sm font-medium text-neutral-300 mb-1">
            Password
          </label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
            required
            autocomplete="current-password"
            class="w-full rounded-lg border border-neutral-700 bg-neutral-800 px-4 py-2 text-white placeholder-neutral-500 focus:border-sky-500 focus:outline-none focus:ring-2 focus:ring-sky-500/20"
          />
        </div>

        <div
          id="error"
          class="hidden rounded-lg bg-red-500/10 border border-red-500/20 px-4 py-3 text-sm text-red-300"
          role="alert"
        >
        </div>

        <button
          type="submit"
          id="submit-btn"
          class="w-full rounded-lg bg-sky-600 px-4 py-3 font-semibold text-white hover:bg-sky-500 focus:outline-none focus:ring-2 focus:ring-sky-500 focus:ring-offset-2 focus:ring-offset-neutral-900 disabled:cursor-not-allowed disabled:opacity-50 transition"
        >
          <span id="btn-text">Sign In</span>
          <span id="btn-loading" class="hidden">Signing in...</span>
        </button>
      </form>

      <div class="mt-6 text-center">
        <a href="/" class="text-sm text-sky-400 hover:text-sky-300 underline underline-offset-2">
          ‚Üê Back to home
        </a>
      </div>
    </div>
  </div>

  <script>
    // @ts-check
    import { createClient } from '@supabase/supabase-js';

    const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL;
    const supabaseAnonKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;
    const supabase =
      supabaseUrl && supabaseAnonKey ? createClient(supabaseUrl, supabaseAnonKey) : null;

    const form = document.getElementById('login-form');
    const emailInput = document.getElementById('email');
    const passwordInput = document.getElementById('password');
    const errorDiv = document.getElementById('error');
    const submitBtn = document.getElementById('submit-btn');
    const btnText = document.getElementById('btn-text');
    const btnLoading = document.getElementById('btn-loading');

    /**
     * @returns {{
     *   form: HTMLFormElement;
     *   emailInput: HTMLInputElement;
     *   passwordInput: HTMLInputElement;
     *   errorDiv: HTMLDivElement;
     *   submitBtn: HTMLButtonElement;
     *   btnText: HTMLElement;
     *   btnLoading: HTMLElement;
     * } | null}
     */
    function getLoginElements() {
      if (!(form instanceof HTMLFormElement)) return null;
      if (!(emailInput instanceof HTMLInputElement)) return null;
      if (!(passwordInput instanceof HTMLInputElement)) return null;
      if (!(errorDiv instanceof HTMLDivElement)) return null;
      if (!(submitBtn instanceof HTMLButtonElement)) return null;
      if (!(btnText instanceof HTMLElement)) return null;
      if (!(btnLoading instanceof HTMLElement)) return null;
      return { form, emailInput, passwordInput, errorDiv, submitBtn, btnText, btnLoading };
    }

    const makeErrorFns = (/** @type {HTMLDivElement} */ errEl) => ({
      show: (/** @type {string} */ message) => {
        errEl.textContent = message;
        errEl.classList.remove('hidden');
      },
      hide: () => {
        errEl.classList.add('hidden');
        errEl.textContent = '';
      },
    });

    const setLoading = (
      /** @type {HTMLButtonElement} */ submitButton,
      /** @type {HTMLElement} */ buttonText,
      /** @type {HTMLElement} */ buttonLoading,
      /** @type {boolean} */ isLoading,
    ) => {
      submitButton.disabled = isLoading;
      buttonText.classList.toggle('hidden', isLoading);
      buttonLoading.classList.toggle('hidden', !isLoading);
    };

    const handleSubmit = async (
      /** @type {SubmitEvent} */ e,
      /** @type {NonNullable<ReturnType<typeof getLoginElements>>} */ els,
      /** @type {{ show: (message: string) => void; hide: () => void }} */ errFns,
    ) => {
      e.preventDefault();
      errFns.hide();
      setLoading(els.submitBtn, els.btnText, els.btnLoading, true);
      try {
        if (!supabase) throw new Error('Supabase is not configured for this build');
        const email = els.emailInput.value.trim();
        const password = els.passwordInput.value;
        const { data, error } = await supabase.auth.signInWithPassword({ email, password });
        if (error) return errFns.show(error.message);
        if (!data.session) return errFns.show('No session returned. Please try again.');
        const opts = 'path=/; max-age=604800; samesite=lax';
        document.cookie = `sb-access-token=${data.session.access_token}; ${opts}`;
        document.cookie = `sb-refresh-token=${data.session.refresh_token}; ${opts}`;
        window.location.href = 'https://admin.bfsiinsights.com/review';
      } catch (err) {
        errFns.show('An unexpected error occurred. Please try again.');
        console.error('Login error:', err);
      } finally {
        setLoading(els.submitBtn, els.btnText, els.btnLoading, false);
      }
    };

    const els = getLoginElements();
    if (els) {
      const errFns = makeErrorFns(els.errorDiv);
      els.form.addEventListener('submit', (e) => handleSubmit(e, els, errFns));
    }
  </script>
</Base>
