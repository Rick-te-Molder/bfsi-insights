{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://bfsiinsights.com/schemas/kb.schema.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "url": { "type": "string", "format": "uri" },
