        type="search"
        placeholder="Search by title, author, or source..."
        class="rounded-md border border-neutral-700 bg-neutral-900 px-3 py-2 text-base placeholder:text-neutral-500"
      />
    </label>

    <!-- Dynamically render first 3 filters (primary filters) -->
    {
      filters.slice(0, 3).map((filter) => {
        const filterValues = values[filter.column_name] || [];
        const isRole = filter.column_name === 'role';

        return (
          <label class="flex flex-col gap-1 text-sm">
            <span class="text-neutral-300">
              {filter.display_label} <span class="text-neutral-500">({filterValues.length})</span>
            </span>
            <select
              id={`f-${filter.column_name}`}
              class="rounded-md border border-neutral-700 bg-neutral-900 px-2 py-1.5"
            >
              <option value={isRole ? 'all' : ''}>
                {isRole ? `Everyone (${resources.length})` : 'All'}
              </option>
              {filterValues.map((v) => (
                <option value={v.value}>{v.label}</option>
